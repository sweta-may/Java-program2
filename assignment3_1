import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class HelloJavaFX extends Application {
    @Override
    public void start(Stage stage) {
        String javaVersion = System.getProperty("java.version");
        String javafxVersion = System.getProperty("javafx.runtime.version"); // common property; may be null
        if (javafxVersion == null) javafxVersion = System.getProperty("javafx.version");
        if (javafxVersion == null) javafxVersion = "Unknown";

        Label hello = new Label("Hello, JavaFX!");
        Label info = new Label("Java version: " + javaVersion);
        Label fx = new Label("JavaFX version: " + javafxVersion);

        VBox root = new VBox(10, hello, info, fx);
        root.setStyle("-fx-padding:20; -fx-alignment:center;");
        Scene scene = new Scene(root, 350, 150);

        stage.setTitle("Hello JavaFX");
        stage.setScene(scene);
        stage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
