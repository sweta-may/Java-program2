class TicketBooking {
    private int tickets = 1;

    synchronized void bookTicket(String customer) {
        if (tickets > 0) {
            System.out.println(customer + " booked the last ticket!");
            tickets--;
        } else {
            System.out.println(customer + " â€“ Sorry, ticket already booked!");
        }
    }
}

public class BookingDemo {
    public static void main(String[] args) {
        TicketBooking tb = new TicketBooking();
        Thread t1 = new Thread(() -> tb.bookTicket("Customer 1"));
        Thread t2 = new Thread(() -> tb.bookTicket("Customer 2"));
        t1.start();
        t2.start();
    }
}
